<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.strandhogg.v1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/strandhoggicon_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/strandhoggicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MaliciousActivity"
            android:allowTaskReparenting="true"
            android:taskAffinity="com.ActivityCounter"/>

        <activity android:name=".DistractionActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>